<div class="container">

    <div class="row" ng-controller="OrderControlPanelListCtrl">
        <div class="col-md-10 col-lg-10">
            <table class="table table-bordered" >
                <tr>
                    <th ng-click="selectOrderBy('OrderDate')" class="btn-link">
                        OrderDate
                    </th>
                    <th ng-click="selectOrderBy('TotalPrice')" class="btn-link">
                        TotalPrice
                    </th>
                </tr>
                <tr ng-repeat="order in ordersList | orderBy:selectedOrder">
                     <!-- date : 'dd-MMMM-yyyy'-->
                    <td >{{order.OrderDate  | date : 'dd-MMMM-yyyy' }}</td>
                    <td>{{order.TotalPrice}}</td>
                    <td style="display:none" ng-bind="order.Id"></td>
                    <td>
                        <button ng-click="DeleteOrder(order.Id)" class="btn btn-sm btn-link" value="Delete">Delete</button>
                        <button ng-click="EditOrder(order.Id)" class="btn btn-sm btn-link" value="Edit">Edit</button>
                        <button ng-click="getOrderDetails(order.Id)" class="btn btn-sm btn-link">Details</button>
                    </td>
                    <td class="col-md-12" ng-if='(order.Id==selectedOrderEditId)&&editSelected '>
                        <div>
                            <button type="button"  ng-click="cancelEdit(Order.Id)" class="close" >&times;</button>
                            <form name="EditOrderForm" class="form-inline" novalidate>
                                
                                   
                                <label class="control-label">
                                    Order Date: <input type="text" ng-model="selectedOrder.OrderDate " class="form-control" required />
                                </label>
                                <label class="control-label">
                                   Total Price : <input type="text" ng-model="selectedOrder.TotalPrice" class="form-control" required />
                                </label>
                                
                                <input type="button" class="btn btn-success" value="Save" ng-click="saveEditOrder(selectedOrder)" />
                            </form>

                        </div>
                    </td>
                    <td class="col-md-12" ng-if='order.Id === selectedOrderDetails && detailsSelected'>
                        <order-details selected-order-details="selectedOrderDetails"
                                       close="cancelEdit(order.Id)">

                        </order-details>
                    </td>
                </tr>
            </table>
        </div>



    </div>
</div>