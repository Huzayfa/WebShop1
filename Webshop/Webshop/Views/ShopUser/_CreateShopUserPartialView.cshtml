

<div class="container" ng-controller="CreateShopUsersCtrl">
    <h3 class="h">Create User</h3>
    <br />
    <b class="message-Invalide">{{responseMessage}} </b>
    <form id ="newUserForm" name="newUserForm" class="form-inline" novalidate>
        
        <label id="FirstName" class="control-label">
            FirstName:
            
            <input type="text" name="firstName" 
                   ng-model="newUser.FirstName" class="form-control" 
                   ng-minlength="3" ng-maxlength="10" required 
                   />
            <span class="message-Invalide" ng-show="newUserForm.firstName.$touched && newUserForm.firstName.$error.required">The name is required.</span>
            <span class="message-Invalide" ng-show="newUserForm.firstName.$touched && newUserForm.firstName.$error.minlength">The name length must be 3 at least.</span>
            <span class="message-Invalide" ng-show="newUserForm.firstName.$touched && newUserForm.firstName.$error.maxlength">The name length must be less than 11.</span>
        </label>
        <label id="LastName" class="control-label">
            LastName:
            <input type="text" name="lastName" ng-model="newUser.LastName" class="form-control" required />
            <span class="message-Invalide" ng-show="newUserForm.lastName.$touched && newUserForm.lastName.$invalid">The last name is required.</span>
        </label>
        <label id="UserName" class="control-label">
            UserName:
            <input type="text" name="userName" ng-model="newUser.UserName" class="form-control" required />
            <span class="message-Invalide" ng-show="newUserForm.userName.$touched && newUserForm.userName.$invalid">The userName is required.</span>
        </label>
        <label id="Password" class="control-label">
            Password:
            <input name="password" type="password" ng-model="newUser.Password" class="form-control" required />
            <span class="message-Invalide" ng-show="newUserForm.password.$touched && newUserForm.password.$invalid">The password is required.</span>
        </label>

        <label id="StreetAddress" class="control-label">
            StreetAddress:
            <input type="text" name="StreetAddress" ng-model="newUser.StreetAddress" class="form-control" required />
            <span style="color:red" ng-show="newUserForm.StreetAddress.$dirty && newUserForm.StreetAddress.$invalid">
                <span class="message-Invalide" ng-show="newUserForm.StreetAddress.$error.required">StreetAddress is required.</span>
                <span class="message-Invalide" ng-show="newUserForm.StreetAddress.$error.email">Please insert a valid StreetAddress.</span>
            </span>
        </label>

        <label id="PostNumber" class="control-label">
            Post Number:
            <input type="text" name="PostNumber" ng-model="newUser.PostNumber" class="form-control" required />
            <span style="color:red" ng-show="newUserForm.PostNumber.$dirty && newUserForm.PostNumber.$invalid">
                <span class="message-Invalide" ng-show="newUserForm.PostNumber.$error.required">Post Number is required.</span>
                @* <span class="message-Invalide" ng-show="newUserForm.PostNumber.$error.email">Please insert a valid Country Name.</span>*@
            </span>
        </label>

        <label id="CityName" class="control-label">
            City Name:
            <input type="text" name="CityName" ng-model="newUser.CityName" class="form-control" required />
            <span style="color:red" ng-show="newUserForm.CityName.$dirty && newUserForm.CityName.$invalid">
                <span class="message-Invalide" ng-show="newUserForm.CityName.$error.required">City Name is required.</span>
                <span class="message-Invalide" ng-show="newUserForm.CityName.$error.email">Please insert a valid City Name.</span>
            </span>
        </label>

        <label id="CountryName" class="control-label">
            Country Name:
            <input type="text" name="CountryName" ng-model="newUser.CountryName" class="form-control" required />
            <span style="color:red" ng-show="newUserForm.CountryName.$dirty && newUserForm.CountryName.$invalid">
                <span class="message-Invalide" ng-show="newUserForm.CountryName.$error.required">Country Name is required.</span>
                <span class="message-Invalide" ng-show="newUserForm.CountryName.$error.email">Please insert a valid Country Name.</span>
            </span>
        </label>

        <label id="Email" class="control-label">
            Email:
            <input type="email" name="email" ng-model="newUser.Email" class="form-control" required />
            <span style="color:red" ng-show="newUserForm.email.$dirty && newUserForm.email.$invalid">
                <span class="message-Invalide" ng-show="newUserForm.email.$error.required">Email is required.</span>
                <span class="message-Invalide" ng-show="newUserForm.email.$error.email">Please insert a valid Email.</span>
            </span>
        </label>

        <label id="PhoneNumber" class="control-label">
            PhoneNumber:
            <input type="text" name="PhoneNumber" ng-model="newUser.PhoneNumber" class="form-control" />
            <span style="color:red" ng-show="newUserForm.PhoneNumber.$dirty && newUserForm.PhoneNumber.$invalid">

                <span class="message-Invalide" ng-show="newUserForm.PhoneNumber.$error.email">Please insert a valid PhoneNumber.</span>
            </span>
        </label>


        <br />
        <input type="button" value="Upload Picture" onclick="$('#upLoadNewUserPic').click()" class="btn btn-success" />
        <input name="newUserPhoto" id="upLoadNewUserPic" type="file" ng-hide="true"
               ng-model="userPhoto" value="Uplaod Pic" file-model="userPhoto" />
        <br />
        <input type="button" class="btn btn-success" value="Save" ng-click="CreateUser(newUser)"
               ng-disabled="newUserForm.$invalid" />

    </form>

</div>
