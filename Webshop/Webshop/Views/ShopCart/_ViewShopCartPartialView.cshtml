

<div id="cartInfo" class="container" ng-controller="ViewShopCartCtrl as vm">
    <div class="row">
        <span class="glyphicon glyphicon-shopping-cart">{{cartLength}}</span>
        <a class="btn btn-success" href="#/OrderConfirm">Confirm</a>
    </div>
    
    <div class="row">
        <h4>Total Price : {{totalPrice}}</h4>
    </div>
    <div class="row text-center">

        <div ng-repeat="product in cart | orderBy:selectedOrder"
             class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
            <div class="thumbnail">
                <div class="" id="ProductPhoto">
                    <a href="#/ProductCustomerAllDetails/{{product.Id}}">
                        <img ng-src="{{product.Photo}}" class="img-rounded"
                             alt="Fjords" 
                             @*style="width:40%"*@
                             style="height:15em"
                              />
                    </a>
                </div>
                <div class="caption">
                    <div>
                        Quantity
                        <input style="max-width:70px" type="number"
                               min="0"
                               oninput="this.value = this.value.match(/\d*[0-9]/gmi);"
                               
                               step="1"
                               max="1000"
                               class="small input-sm"
                               ng-model="product.Quantity" />

                    </div>
                    <div>
                        <h5>{{product.Name}}</h5>
                        <div class="Mytooltip">
                            Description
                            <span class="Mytooltiptext" ng-model="product.Description">
                                {{product.Description}}
                            </span>
                        </div>
                    </div>
                    <div>
                        <span>Price: {{product.Price}}</span>
                    </div>
                    <button ng-click="deleteProductFromCart(product.Id)" class="btn btn-sm btn-danger" value="Delete">Delete From Cart</button>
                </div>
            </div>
        </div>

    </div>

</div>
