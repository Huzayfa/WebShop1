

<div id="cartInfo" class="container" ng-controller="ViewShopCartCtrl as vm">

    <div class="row" id="ConfirmShopingForm">


        <!-- Modal -->
        <button style="display:none" id="ShowLoginModal" type="button" data-toggle="modal" data-target="#logInModal">Open Modal</button>

        <div class="modal fade" id="logInModal" role="dialog" style="display:none">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Please Login</h4>
                    </div>
                    <div class="modal-body">
                        @Html.Action("Login","Account","test")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        @using (Ajax.BeginForm("ConfirmShoping", "ShopCart", new { }, new AjaxOptions
        {
            HttpMethod = "Post",
            // OnSuccess = "",


        }
                                        , new { id = "ConfirmShoping" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <span class="glyphicon glyphicon-shopping-cart">{{cartLength}}</span>


            <button type="button" onclick="getCart()" class="btn btn-success"
                    value="Confirm Shoping">
                Confirm Shoping
            </button>
            @*<button type="submit" class="btn btn-success" value="Confirm Shoping"
                        ng-click="confirmShoping()">
                    Confirm Shoping
                </button>*@
        }
    </div>
    <div class="row">
        <h4>Total Price : {{totalPrice}}</h4>
    </div>
    <div class="row text-center">

        <div ng-repeat="product in cart | orderBy:selectedOrder"
             class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
            <div class="thumbnail"
                 @*style="display:grid; margin:10px; border:groove;"
                 class="center-block panel panel-body"*@
                 >
                <div class="" id="ProductPhoto">
                    <a href="#/ProductCustomerAllDetails/{{product.Id}}">
                        <img ng-src="{{product.Photo}}" class="img-rounded"
                             alt="Fjords" 
                             @*style="width:40%"*@
                             style="height:15em"
                              />
                    </a>
                </div>
                <div class="caption">
                    <div>
                        Quantity
                        <input style="max-width:70px" type="number"
                               min="0"
                               oninput="this.value = this.value.match(/\d*[0-9]/gmi);"
                               
                               step="1"
                               max="1000"
                               class="small input-sm"
                               ng-model="product.Quantity" />

                    </div>
                    <div>
                        <h5>{{product.Name}}</h5>
                        <div class="Mytooltip">
                            Description
                            <span class="Mytooltiptext" ng-model="product.Description">
                                {{product.Description}}
                            </span>
                        </div>
                    </div>
                    <div>
                        <span>Price: {{product.Price}}</span>
                    </div>
                    <button ng-click="deleteProductFromCart(product.Id)" class="btn btn-sm btn-danger" value="Delete">Delete From Cart</button>
                </div>
            </div>
        </div>

    </div>

</div>
