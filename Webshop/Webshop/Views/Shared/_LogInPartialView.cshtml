@*@model WebShop.Models.Account.LoginViewModel*@
<div class="container" ng-controller="LoginCtrl">
    <div class="row">
        <b class="message-Invalide">{{responseMessage}} </b>
        <form class="form-horizontal" ng-submit="login()">
           @* @Html.ValidationMessage(Model)*@
            <div class="form-group">
                <label class="control-label col-sm-4 col-md-4" for="userName">UserName:</label>
                <div class="col-sm-8 col-md-8">
                    <input id="userName" type="text" 
                          ng-model="userLoginVieModel.userName" 
                           class="form-control col-sm-8 col-md-8"
                            placeholder="Enter User Name" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4 col-md-4" for="passWord">PassWord :</label>
                <div class="col-sm-8 col-md-8">
                    <input id="passWord" type="password" 
                           ng-model="userLoginVieModel.passWord" class="form-control" placeholder="Password" />
                </div>
            </div>
            <div class="form-group ">
                <div class="col-sm-offset-4 col-md-8">
                    <div class="checkbox">
                        <label><input type="checkbox" 
                              ng-model="userLoginVieModel.RememberMe"/>Remeber me </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-md-10">
                    <input type="submit" class="btn btn-success" value="LogIn" 
                           ng-click="login()"/>
                </div>
            </div>
        </form>

    </div>
</div>